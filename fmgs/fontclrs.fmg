   CLIENTAREA

   DEFINE STATUSBAR

      STATUSITEM " "

      STATUSITEM i18n( "Exit" ) ;
         WIDTH 90 ;
         ACTION ThisWindow.Release()

   END STATUSBAR

   @ 10, 20 LABEL lbl_Object ;
      WIDTH 250 ;
      HEIGHT 20 ;
      TRANSPARENT

   @ 40, 50 BUTTON btn_FntType ;
      WIDTH 120 ;
      HEIGHT 28 ;
      CAPTION i18n( "Font Type" ) ;
      ACTION ::SetFontType( si ) ;
      SIZE 9

   @ 40, 220 BUTTON btn_DefFntType ;
      WIDTH 120 ;
      HEIGHT 28 ;
