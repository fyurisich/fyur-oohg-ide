      HEIGHT 28 ;
      CAPTION i18n( "Fontcolor" ) ;
      ACTION ::SetFontColor( si ) ;
      SIZE 9

   @ 80, 220 BUTTON btn_DefFntClr ;
      WIDTH 120 ;
      HEIGHT 28 ;
      CAPTION i18n( "Default FontColor" ) ;
      ACTION ::SetDefaultFontColor( si ) ;
