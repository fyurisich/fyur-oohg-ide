      FIELDS {'level','item','named','obj','action','image','stretch','checked','enabled','hilited','right','breakmenu','subclass'} ;
      FONT 'courier new' ;
      SIZE 10 ;
      ON CHANGE ::ParseItem() ;
      ON GOTFOCUS ::ParseItem() ;
      LOCK 

