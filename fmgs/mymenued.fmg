      HEIGHT 18 ;
      VALUE 'Name' ;
      CENTERALIGN 

   @ 362, 20 TEXTBOX text_1 ;
      WIDTH 120 ;
      HEIGHT 24 ;
      MAXLENGTH 30 ;
