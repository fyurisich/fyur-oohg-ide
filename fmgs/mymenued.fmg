      HEIGHT 28 ;
      CAPTION '/\' ;
      ACTION ::MoveUp()

   @ 265, 435 BUTTON button_107 ;
      WIDTH 100 ;
      HEIGHT 28 ;
      CAPTION '\/' ;
      ACTION ::MoveDown()

   @ 310, 10 FRAME frame_1 ;
      WIDTH 400 ;
      HEIGHT 90 ;
