DEFINE WINDOW TEMPLATE ;
   AT 108, 99 ;
   WIDTH 778 ;
   HEIGHT 440 ;
   MODAL ;
   BACKCOLOR ::oEditor:myIde:aSystemColor

   @ 10, 10 FRAME frame_2 ;
      WIDTH 530 ;
      HEIGHT 290 ;
      CAPTION i18n( 'Items' ) ;
      TRANSPARENT 

